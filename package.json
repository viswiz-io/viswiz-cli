{
  "name": "viswiz",
  "description": "The VisWiz.io CLI",
  "version": "2.2.1",
  "main": "bin/viswiz",
  "author": "Valentin Agachi <valentin@viswiz.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/viswiz-io/viswiz-cli"
  },
  "license": "MIT",
  "keywords": [
    "visual regression testing",
    "visual testing",
    "automated testing",
    "automation",
    "testing",
    "screenshot",
    "cli"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "bin": {
    "viswiz": "./bin/viswiz"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "build": "babel src/ --out-dir dist/ --ignore \"**/__mocks__/*\"",
    "build-pkg": "yarn build && pkg --out-path ./pkg .",
    "docs": "esdoc",
    "lint": "eslint . --cache --fix --ignore-pattern '!.eslintrc.js'",
    "pretty": "prettier --write --list-different \"**/*.js\"",
    "prepack": "yarn build",
    "pretest": "yarn build",
    "release": "standard-version -a",
    "test:jest": "jest",
    "test:pkg": "yarn build-pkg && ./pkg/viswiz-linux --help",
    "test:watch": "jest --watch",
    "test": "yarn test:jest"
  },
  "dependencies": {
    "commander": "5.1.0",
    "env-ci": "5.0.2",
    "progress": "2.0.3",
    "viswiz-sdk": "5.2.1"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.9.6",
    "@babel/plugin-proposal-object-rest-spread": "7.9.6",
    "@babel/plugin-transform-modules-commonjs": "7.9.6",
    "babel-jest": "26.0.1",
    "eslint": "7.1.0",
    "github-release-cli": "1.3.1",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "lint-staged": "10.2.6",
    "nock": "12.0.3",
    "pkg": "4.4.8",
    "prettier": "2.0.5",
    "standard-version": "8.0.0",
    "validate-commit-msg": "2.14.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "lint-staged"
    }
  },
  "pkg": {
    "targets": [
      "node10-linux-x64",
      "node10-alpine-x64",
      "node10-darwin-x64",
      "node10-win-x64"
    ]
  }
}
