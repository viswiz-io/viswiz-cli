{
  "name": "viswiz",
  "description": "The VisWiz.io CLI",
  "version": "2.0.0",
  "main": "bin/viswiz",
  "author": "Valentin Agachi <valentin@viswiz.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/viswiz-io/viswiz-cli"
  },
  "license": "MIT",
  "keywords": [
    "visual regression testing",
    "visual testing",
    "automated testing",
    "automation",
    "testing",
    "screenshot",
    "cli"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "bin": {
    "viswiz": "./bin/viswiz"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "build": "babel src/ --out-dir dist/ --ignore \"**/__mocks__/*\"",
    "build-pkg": "yarn build && pkg --out-path ./pkg .",
    "docs": "esdoc",
    "lint": "eslint . --cache --fix --ignore-pattern '!.eslintrc.js'",
    "pretty": "prettier --write --list-different \"**/*.js\"",
    "prepack": "yarn build",
    "pretest": "yarn build",
    "release": "standard-version -a",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test": "yarn test:jest"
  },
  "dependencies": {
    "commander": "3.0.1",
    "env-ci": "4.5.1",
    "progress": "2.0.3",
    "viswiz-sdk": "5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.8.4",
    "@babel/plugin-proposal-object-rest-spread": "7.8.3",
    "@babel/plugin-transform-modules-commonjs": "7.8.3",
    "babel-jest": "25.1.0",
    "eslint": "6.8.0",
    "github-release-cli": "1.3.1",
    "husky": "4.2.1",
    "jest": "25.1.0",
    "lint-staged": "10.0.7",
    "nock": "11.7.2",
    "pkg": "4.4.2",
    "prettier": "1.19.1",
    "standard-version": "7.1.0",
    "validate-commit-msg": "2.14.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "lint-staged"
    }
  },
  "pkg": {
    "targets": [
      "node8-linux-x64",
      "node8-alpine-x64",
      "node8-darwin-x64",
      "node8-win-x64"
    ]
  }
}
